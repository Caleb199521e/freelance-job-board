# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/freelance-job-board
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/freelance-job-board
MONGODB_URI=mongodb://localhost:27017/freelance-job-board

# JWT secret key (use a long random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-replace-this-in-production

# Frontend URL for CORS (optional - defaults to http://localhost:3000)
# Set this to your frontend's origin if different
CLIENT_URL=http://localhost:3000

# Backend port (optional - defaults to 5000)
PORT=5000

# Node environment (development or production)
NODE_ENV=development
