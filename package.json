{
  "name": "freelance-job-board",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "nodemon backend/server.js",
    "frontend": "live-server frontend --port=3000",
    "start": "node backend/server.js",
    "start:prod": "NODE_ENV=production node backend/server.js",
    "db:status": "node -e \"import('./backend/config/database.js').then(db => console.log(db.default.getStatus()))\"",
    "db:health": "node -e \"import('./backend/utils/dbStatus.js').then(({DBStatus}) => DBStatus.healthCheck().then(console.log))\"",
    "db:reset": "node scripts/reset-database.js",
    "generate-secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('hex'))\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10",
    "tailwindcss": "^3.3.0"
  }
}
